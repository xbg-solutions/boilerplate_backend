# Application Configuration
APP_NAME=my-backend-api
APP_VERSION=1.0.0
NODE_ENV=development
PORT=5001

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id

# API Configuration
API_BASE_PATH=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
REQUEST_SIZE_LIMIT=10mb
ENABLE_SWAGGER=true

# Features
FEATURE_AUTHENTICATION=true
FEATURE_MULTI_TENANT=false
FEATURE_FILE_UPLOADS=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=false
FEATURE_REALTIME=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# JWT Configuration
JWT_ISSUER=my-backend-api
JWT_AUDIENCE=my-backend-api
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Token Blacklist
TOKEN_BLACKLIST_ENABLED=true
TOKEN_BLACKLIST_CLEANUP_INTERVAL=3600000
TOKEN_BLACKLIST_RETENTION_DAYS=30

# Database Configuration
MAIN_DATABASE_ID=(default)
ANALYTICS_DATABASE_ID=analytics
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000
DB_TIMEOUT=10000
DB_ENABLE_CACHE=true

# Email (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Payments (Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Auth Providers (Optional)
# AUTH0_DOMAIN=
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=
# CLERK_API_KEY=

# Firestore Emulator (for local development)
# FIRESTORE_EMULATOR_HOST=localhost:8080
